<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-py-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        <div class="my-2">
          <label for="email_address">Email address</label>
          <input
            type="email"
            name="customer[email"
            id="email_address"
            autocomplete="email"
            class="relative block-w-full px-3 py-2 border"
            placeholder="Email Address"
          >
        </div>
      {% endform %}
    </div>
  </div>
  <div class=""></div>
</div>

{% schema %}
{
  "name": "Section name",
  "settings": []
}
{% endschema %}
